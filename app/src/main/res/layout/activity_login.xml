<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:outlineAmbientShadowColor="#7C2B2B"
        android:shadowColor="#BF2F2F"
        android:text="un/rewind"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:outlineAmbientShadowColor="#7C2B2B"
        android:shadowColor="#BF2F2F"
        android:text="sign in:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bad_script"
        android:hint="email..."
        android:inputType="textPersonName"
        android:textColorHint="#C5B1B1"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bad_script"
        android:hint="password..."
        android:inputType="textPassword"
        android:textColorHint="#C5B1B1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FF24E2"
        android:fontFamily="@font/gilda_display"
        android:text="login"
        android:textColor="#FBF8F8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF24E2"
        android:fontFamily="@font/gilda_display"
        android:text="sign up?"
        android:textColor="#FBF8F8"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/gilda_display"
        android:gravity="center"
        android:outlineAmbientShadowColor="#7C2B2B"
        android:shadowColor="#BF2F2F"
        android:text="your music
        journal awaits..."
        android:textSize="40sp"
        android:textStyle="bold" />
</LinearLayout>